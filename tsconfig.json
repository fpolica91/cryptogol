{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es5", "es6", "esnext.asynciterable", "es7", "es2017", "dom"],
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts" , "**/*.ts", "**/*.tsx"]
}
